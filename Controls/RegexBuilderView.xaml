<UserControl x:Class="Grex.Controls.RegexBuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="RegexBuilderControl"
             x:Uid="RegexBuilderView"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Top row: sample text and live results -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="SampleTextTextBlock"
                           Grid.Row="0"
                           x:Uid="SampleTextTextBlock"
                           Text="Sample Text"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="SampleTextTextBox"
                         Grid.Row="1"
                         x:Uid="SampleTextTextBox"
                         TextWrapping="Wrap"
                         PlaceholderText="Enter sample text to test your regex pattern against..."
                         TextChanged="SampleTextTextBox_TextChanged"
                         FontSize="12"
                         Margin="0,8,0,0"
                         VerticalAlignment="Stretch"/>
            </Grid>

            <Grid Grid.Column="2" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="LiveMatchResultsTextBlock"
                           Grid.Row="0"
                           x:Uid="LiveMatchResultsTextBlock"
                           Text="Live Match Results"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Border Grid.Row="1"
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Padding="8"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBlock x:Name="MatchResultsTextBlock"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>

        <!-- Middle row: regex pattern spanning full width -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    Spacing="8"
                    Margin="0,12,0,0">
            <TextBlock x:Name="RegexPatternTextBlock"
                       x:Uid="RegexPatternTextBlock"
                       Text="Regex Pattern"
                       FontSize="16"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="RegexPatternTextBox"
                     x:Uid="RegexPatternTextBox"
                     PlaceholderText="Enter regex pattern..."
                     TextChanged="RegexPatternTextBox_TextChanged"
                     FontSize="12"/>
        </StackPanel>

        <!-- Presets row spanning full width -->
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    Spacing="8"
                    Margin="0,16,0,0">
            <TextBlock x:Name="PresetsTextBlock"
                       x:Uid="PresetsTextBlock"
                       Text="Presets:"
                       FontSize="16"
                       FontWeight="SemiBold"/>
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="EmailPresetButton"
                        Grid.Column="0"
                        x:Uid="EmailPresetButton"
                        Content="Email"
                        Click="EmailPresetButton_Click"
                        PointerEntered="Button_PointerEntered"
                        PointerExited="Button_PointerExited"
                        Margin="0,0,12,0"
                        HorizontalAlignment="Stretch"/>
                <Button x:Name="PhonePresetButton"
                        Grid.Column="1"
                        x:Uid="PhonePresetButton"
                        Content="Phone"
                        Click="PhonePresetButton_Click"
                        PointerEntered="Button_PointerEntered"
                        PointerExited="Button_PointerExited"
                        Margin="0,0,12,0"
                        HorizontalAlignment="Stretch"/>
                <Button x:Name="DatePresetButton"
                        Grid.Column="2"
                        x:Uid="DatePresetButton"
                        Content="Date"
                        Click="DatePresetButton_Click"
                        PointerEntered="Button_PointerEntered"
                        PointerExited="Button_PointerExited"
                        Margin="0,0,12,0"
                        HorizontalAlignment="Stretch"/>
                <Button x:Name="DigitsPresetButton"
                        Grid.Column="3"
                        x:Uid="DigitsPresetButton"
                        Content="Digits"
                        Click="DigitsPresetButton_Click"
                        PointerEntered="Button_PointerEntered"
                        PointerExited="Button_PointerExited"
                        Margin="0,0,12,0"
                        HorizontalAlignment="Stretch"/>
                <Button x:Name="URLPresetButton"
                        Grid.Column="4"
                        x:Uid="URLPresetButton"
                        Content="URL"
                        Click="UrlPresetButton_Click"
                        PointerEntered="Button_PointerEntered"
                        PointerExited="Button_PointerExited"
                        HorizontalAlignment="Stretch"/>
            </Grid>
        </StackPanel>

        <!-- Bottom row: options on the left, breakdown on the right -->
        <Grid Grid.Row="3"
              Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="VisualRegexBreakdownTextBlock"
                           Grid.Row="0"
                           x:Uid="VisualRegexBreakdownTextBlock"
                           Text="Visual Regex Breakdown"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Border Grid.Row="1"
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Padding="8"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  Padding="0,0,15,15">
                        <StackPanel x:Name="BreakdownStackPanel" Spacing="4"/>
                    </ScrollViewer>
                </Border>
            </Grid>

            <StackPanel Grid.Column="2"
                        Spacing="12">
                <TextBlock x:Name="OptionsTextBlock"
                           x:Uid="OptionsTextBlock"
                           Text="Options"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <CheckBox x:Name="CaseInsensitiveCheckBox"
                          x:Uid="CaseInsensitiveCheckBox"
                          Content="Case insensitive"
                          Checked="OptionsCheckBox_Changed"
                          Unchecked="OptionsCheckBox_Changed"
                          PointerEntered="CheckBox_PointerEntered"
                          PointerExited="CheckBox_PointerExited"/>
                <CheckBox x:Name="MultilineCheckBox"
                          x:Uid="MultilineCheckBox"
                          Content="Multiline"
                          Checked="OptionsCheckBox_Changed"
                          Unchecked="OptionsCheckBox_Changed"
                          PointerEntered="CheckBox_PointerEntered"
                          PointerExited="CheckBox_PointerExited"/>
                <CheckBox x:Name="GlobalMatchCheckBox"
                          x:Uid="GlobalMatchCheckBox"
                          Content="Global match"
                          IsChecked="True"
                          Checked="OptionsCheckBox_Changed"
                          Unchecked="OptionsCheckBox_Changed"
                          PointerEntered="CheckBox_PointerEntered"
                          PointerExited="CheckBox_PointerExited"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
