<UserControl x:Class="Grex.Controls.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="AboutControl"
             x:Uid="AboutView"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="24">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24" MaxWidth="600">
                <!-- App Logo - Centered at top -->
                <Image x:Name="AppLogoImage"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Width="200"
                       Height="200"
                       Stretch="Uniform"/>
                
                <!-- App Name -->
                <TextBlock x:Name="AppNameTextBlock"
                           Text="Grex"
                           FontSize="36"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
                
                <!-- Version Info -->
                <TextBlock x:Name="VersionTextBlock"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
                
                <!-- Creator Info -->
                <TextBlock x:Name="CreatedByTextBlock"
                           x:Uid="AboutCreatedByTextBlock"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>
                
                <!-- License Info -->
                <TextBlock x:Name="LicenseTextBlock"
                           x:Uid="AboutLicenseTextBlock"
                           FontSize="18"
                           HorizontalAlignment="Center"/>
                
                <!-- GitHub Link -->
                <HyperlinkButton x:Name="GitHubLinkButton"
                                 x:Uid="AboutGitHubLinkButton"
                                 NavigateUri="https://github.com/BornSupercharged/Grex"
                                 HorizontalAlignment="Center"
                                 FontSize="18"
                                 Margin="0,8,0,0"
                                 PointerEntered="HyperlinkButton_PointerEntered"
                                 PointerExited="HyperlinkButton_PointerExited"/>
                
                <!-- Keyboard Shortcut Info -->
                <TextBlock x:Name="KeyboardShortcutTextBlock"
                           x:Uid="AboutKeyboardShortcutTextBlock"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,32,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

